@model TestApp.Models.Profile

<div class="modal fade" id="myModalDelete" role="dialog">
    <div class="modal-dialog modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalDelete-label">Voulez-vous supprimer ce profile?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form id="DeleteProfile">
                    @Html.HiddenFor(model => model.ProfilId)
                    <div class="form-group row">
                        <label class="col-form-label col-sm-10">@Html.DisplayNameFor(model => model.ProfilName): </label>
                        <div class="col-sm-10">
                            <div>@Html.DisplayFor(model => model.ProfilName)</div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCancelDelete" type="button" class="btn rounded-pill btn-danger" data-dismiss="modal">Annuler</button>
                <button id="btnDelete" type="button" class="btn rounded-pill btn-primary" data-save="modal">Supprimer</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#btnDelete").click(function () {
            var profileFormData = $("#DeleteProfile").serialize();

            $.ajax({
                type: "POST",
                url: "/Profiles/SaveDeleteProfile",
                data: profileFormData,
                success: function () {
                    // window.location.href = "~/Directions/Index";
                    alert("Direction créée")
                }
            })
        });
        $("#btnCancelSave").click(function () {
            window.location.href = "~/Directions/Index";
        });
    });
</script>