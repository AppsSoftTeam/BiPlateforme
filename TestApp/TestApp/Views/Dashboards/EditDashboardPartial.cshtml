@model TestApp.Models.Dashboard

<div class="modal fade" id="myModalEdit" role="dialog">
    <div class="modal-dialog modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalEdit-label">Modifier</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form id="EditDashboard">
                    <div class="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.DashboardId)

                        <div class="form-group">
                            <label class="col-form-label col-sm-10">Nom dashboard</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.DashboardName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DashboardName, "", new { @class = "text-danger" })
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label col-sm-10">Id workSpace </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.WorkSpaceid, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.WorkSpaceid, "", new { @class = "text-danger" })
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label col-sm-10">Id rapport</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Reportid, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Reportid, "", new { @class = "text-danger" })
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-form-label col-sm-6">Categorie</label>
                            <div class="col-md-10">
                                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCancelEdit" type="button" class="btn rounded-pill btn-danger" data-dismiss="modal">Annuler</button>
                <button id="btnEdit" type="button" class="btn rounded-pill btn-primary" data-save="modal">Enregistrer</button>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {

        $("#btnEdit").click(function () {
            var dashboardFormData = $("#EditDashboard").serialize();

            $.ajax({
                type: "POST",
                url: "/Dashboards/SaveEditDashboard",
                data: dashboardFormData,
                success: function () {
                    // window.location.href = "~/Directions/Index";
                    alert("Direction créée")
                }
            })
        });
        $("#btnCancelSave").click(function () {
            window.location.href = "~/Directions/Index";
        });
    });
</script>