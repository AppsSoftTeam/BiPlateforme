@model IList<TestApp.ViewModels.ReportSelectionVM>



<div class="col-xl-12">
    <div class="demo-inline-spacing mt-3">
        <button type="submit" class="btn btn-primary btn-round">Enregistrer</button>
    </div>
</div>

<table id="example1" class="table table-bordered table-hover" style="font-size:small">
    <thead class="thead-light">
        <tr>
            <th class="text-dark">
                Selectionner
            </th>
            <th class="text-dark">
                Nom
            </th>
            <th class="text-dark">
                Path
            </th>
            <th class="text-dark">
                Nom affiché
            </th>
            <th class="text-dark">Categories</th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>

                    @Html.CheckBoxFor(m => m[i].Selected)
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].ReportName)
                    @Html.HiddenFor(m => m[i].ReportId)
                    @Html.HiddenFor(m => m[i].ReportName)
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].Path)
                    @Html.HiddenFor(m => m[i].ReportId)
                    @Html.HiddenFor(m => m[i].Path)
                </td>
                <td>
                    @Html.EditorFor(m => m[i].ReportNameDisplayed, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(m => m[i].ReportId)
                    @Html.HiddenFor(m => m[i].Path)
                </td>
                <td>

                    <button type="button" class="btn btn-round btn-outline-primary dropdown-toggle" data-toggle="dropdown"> Choose Category </button>
                    <div class="dropdown-menu">

                        @foreach (var category in ViewBag.CategoryId)
                        {
                            <a class="dropdown-item">

                                <label class="custom-control custom-radio">
                                    <input type="radio" name="CategoryId" value="@category.CategoryId" class="custom-control-input" />
                                    <span class="custom-control-label">@category.CategoryName</span>
                                </label>

                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


